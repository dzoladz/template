# ---------------------------------------------------------------------
# EditorConfig Spec: https://editorconfig-specification.readthedocs.io/
# ---------------------------------------------------------------------
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 119

# ---------------------------------------------------------------------
# Language-specific Configuration Options
# ---------------------------------------------------------------------

# XML Files
[*.{xml}]
indent_style = space
indent_size = 2

# JSON Files
[*.{json}]
indent_style = space
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown Files
[*.{md,mdx}]
max_line_length = 80
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Web Files
[*.{htm,html,js,ts,css,sass,scss,less,svg}]
indent_style = space
indent_size = 2

# PHP
[*.{php}]
indent_style = space
indent_size = 2

# Python
[*.{py}]
indent_size = 4
insert_final_newline = true
max_line_length = 80